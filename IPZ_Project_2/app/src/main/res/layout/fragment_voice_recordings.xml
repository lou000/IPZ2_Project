<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/voice_recordings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.VoiceRecordingsFragment">


    <Chronometer
        android:id="@+id/record_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="56sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            app:tint="@color/background"
            android:id="@+id/btnDeleteRec"
            android:layout_width="@dimen/btn_size_recorder"
            android:layout_height="@dimen/btn_size_recorder"
            android:background="@drawable/ic_ripple"
            android:src="@drawable/ic_trashcan" />

        <ImageButton
            app:tint="#FF403F"
            android:id="@+id/btnRecord"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_ripple"
            android:src="@drawable/ic_record"/>

        <ImageButton
            app:tint="@color/background"
            android:id="@+id/btnList"
            android:layout_width="@dimen/btn_size_recorder"
            android:layout_height="@dimen/btn_size_recorder"
            android:background="@drawable/ic_ripple"
            android:src="@drawable/ic_list"
            />

        <ImageButton
            app:tint="@color/background"
            android:id="@+id/btnDone"
            android:layout_width="@dimen/btn_size_recorder"
            android:layout_height="@dimen/btn_size_recorder"
            android:background="@drawable/ic_ripple"
            android:src="@drawable/ic_done"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>