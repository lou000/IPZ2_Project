<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_const_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:focusable="true"
    android:background="@color/background"
    android:focusableInTouchMode="true"
    tools:context=".fragments.ChatFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_container_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/text_layout_chat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-16dp">

            <ImageButton
                android:id="@+id/sendButton_Chat"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:background="@color/secondaryAccent"
                android:clickable="true"
                android:src="@drawable/ic_round_send_message"
                app:tint="@color/background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recordButton_Chat"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/recordButton_Chat"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:layout_marginStart="24dp"
                android:background="@color/secondaryAccent"
                android:src="@drawable/ic_voice_message"
                app:tint="@color/background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chatTextInput"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/chatTextInput"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="Enter Message"
                android:textColorHint="@color/secondaryAccent"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/secondaryAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/voice_layout_chat"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">

            <Chronometer
                android:id="@+id/recordTimer_Chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/secondaryAccent"
                app:layout_constraintBottom_toBottomOf="@+id/btnPlay_Chat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnPlay_Chat"
                app:layout_constraintTop_toTopOf="@+id/voice_layout_chat" />

            <ImageButton
                app:tint="@color/background"
                android:id="@+id/btnDeleteRec_Chat"
                android:layout_width="@dimen/btn_size_voice_layout"
                android:layout_height="@dimen/btn_size_voice_layout"
                android:background="@drawable/ic_ripple"
                android:src="@drawable/ic_trashcan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/voice_layout_chat" />

            <ImageButton
                app:tint="#FF403F"
                android:id="@+id/btnRecord_Chat"
                android:layout_width="@dimen/btn_size_voice_layout"
                android:layout_height="@dimen/btn_size_voice_layout"
                android:background="@drawable/ic_ripple"
                android:src="@drawable/ic_record"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDone_Chat"
                app:layout_constraintStart_toEndOf="@+id/btnDeleteRec_Chat" />

            <ImageButton
                app:tint="@color/background"
                android:id="@+id/btnDone_Chat"
                android:layout_width="@dimen/btn_size_voice_layout"
                android:layout_height="@dimen/btn_size_voice_layout"
                android:background="@drawable/ic_ripple"
                android:src="@drawable/ic_done"
                app:layout_constraintBottom_toBottomOf="@+id/voice_layout_chat"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                app:tint="@color/background"
                android:background="@color/secondaryAccent"
                android:id="@+id/btnPlay_Chat"
                android:layout_width="@dimen/btn_size_voice_layout"
                android:layout_height="@dimen/btn_size_voice_layout"

                android:src="@drawable/ic_play"
                app:layout_constraintStart_toStartOf="@+id/voice_layout_chat"
                app:layout_constraintTop_toTopOf="@+id/voice_layout_chat" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="413dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/buttons_container_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>