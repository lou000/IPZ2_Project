<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".fragments.LogInFragment">

    <Button
        android:id="@+id/login_button_register_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="LOGI IN"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext_log_in"
        app:layout_constraintStart_toStartOf="@+id/password_edittext_log_in"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_log_in"
        />

    <EditText
        android:id="@+id/email_edittext_log_in"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_edittext_log_in"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext_log_in"
        app:layout_constraintStart_toStartOf="@+id/email_edittext_log_in"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_log_in" />

    <TextView
        android:id="@+id/back_to_register_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="Back to regitration"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_span"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_span"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_span" />


    <TextView
        android:id="@+id/forgot_password_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="Forgot password?"
        app:layout_constraintEnd_toEndOf="@+id/login_button_register_log_in"
        app:layout_constraintStart_toStartOf="@+id/login_button_register_log_in"
        app:layout_constraintTop_toBottomOf="@+id/login_button_register_log_in" />

