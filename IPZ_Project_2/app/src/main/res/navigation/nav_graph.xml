<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newMessageFragment">

    <fragment
        android:id="@+id/register_fragment"
        android:name="com.example.ipz_project_2.fragments.RegisterFragment"
        android:label="Regiter"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_fragment_to_log_in_fragment"
            app:destination="@id/LogInFragment" />
        <action
            android:id="@+id/action_register_fragment_to_newMessageFragment"
            app:destination="@id/newMessageFragment" />

    </fragment>
    <fragment
        android:id="@+id/LogInFragment"
        android:name="com.example.ipz_project_2.fragments.LogInFragment"
        android:label="Login"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_LogInFragment_to_register_fragment"
            app:destination="@id/register_fragment" />
        <action
            android:id="@+id/action_LogInFragment_to_newMessageFragment"
            app:destination="@id/newMessageFragment" />
        <action
            android:id="@+id/action_LogInFragment_to_otpcode"
            app:destination="@id/otpcode"></action>
        <action
            android:id="@+id/action_LogInFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.ipz_project_2.fragments.ChatFragment"
        tools:layout="@layout/fragment_chat"
        android:label="{label}">
        <argument
            android:name="userID"
            app:argType="long" />
        <argument
            android:name="privateKey"
            app:argType="string" />
        <argument
            android:name="currentContact"
            app:argType="com.example.ipz_project_2.data.contact.Contact" />
        <argument
            android:name="label"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.example.ipz_project_2.fragments.ContactListFragment"
        android:label="fragment_contact_list"
        tools:layout="@layout/fragment_contact_list" />
    <fragment
        android:id="@+id/voiceRecordingsListFragment"
        android:name="com.example.ipz_project_2.fragments.VoiceRecordingsListFragment"
        android:label="fragment_voice_recordings_list"
        tools:layout="@layout/fragment_voice_recordings_list" />
    <fragment
        android:id="@+id/newMessageFragment"
        android:name="com.example.ipz_project_2.fragments.NewMessageFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_new_message">
        <action
            android:id="@+id/action_newMessageFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_newMessageFragment_to_LogInFragment"
            app:destination="@id/LogInFragment" />
        <action
            android:id="@+id/action_newMessageFragment_to_LogInFragment2"
            app:destination="@id/LogInFragment" />
        <action
            android:id="@+id/action_newMessageFragment_to_addNewContactFragment"
            app:destination="@id/addNewContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewContactFragment"
        android:name="com.example.ipz_project_2.fragments.AddNewContactFragment"
        android:label="new_contact"
        tools:layout="@layout/fragment_add_new_contact" >
        <argument
            android:name="userID"
            app:argType="long" />
        <action
            android:id="@+id/action_addNewContactFragment_to_newMessageFragment"
            app:destination="@id/newMessageFragment" />
    </fragment>


    <fragment
        android:id="@+id/otpcode"
        android:name="com.example.ipz_project_2.otpcode"
        android:label="fragment_otpcode"
        tools:layout="@layout/fragment_otpcode" >
        <argument
            android:name="hash"
            app:argType="string"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_otpcode_to_contactListFragment"
            app:destination="@id/contactListFragment" />
        <action
            android:id="@+id/action_otpcode_to_newMessageFragment"
            app:destination="@id/newMessageFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.ipz_project_2.fragments.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" >
        <action
            android:id="@+id/action_forgotPasswordFragment_to_LogInFragment"
            app:destination="@id/LogInFragment" />
    </fragment>

</navigation>